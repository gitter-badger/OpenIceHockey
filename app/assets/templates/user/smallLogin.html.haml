%form.form{'name' => 'forms.login', 'novalidate' => true, 'ng-controller' => 'LoginController'}
  .alert.alert-danger{'role' => 'alert', 'ng-if' => 'error'}
    %strong
      Error!
    {{error.message}}
  .form-group
    %label.control-label{'for' => 'forms-login-email'}
      Email
    %input#forms-login-email.form-control{'type' => 'email', 'name' => 'email', 'ng-model' => 'user.email', 'required' => true}
  .form-group
    %label.control-label{'for' => 'forms-login-password'}
      Password
    %input#forms-login-password.form-control{'type' => 'password', 'name' => 'password', 'ng-model' => 'user.password', 'required' => true}
  .form-group
    %ajax-button{'btn-type' => "'btn-success'", 'loading' => 'loginFormLoading', 'disabled' => '!forms.login.$valid', 'click' => 'submitLogin'}
      Login
