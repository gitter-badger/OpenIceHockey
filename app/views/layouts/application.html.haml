!!!5
%html{'ng-app' => 'LiveHockey'}
  %head
    %title{'ng-bind-html' => 'title'}
      Open Ice Hockey
    = stylesheet_link_tag :application, :media => 'all'
    = javascript_include_tag :application
    = csrf_meta_tags
    - if session[:user]
      :javascript
        var LOGGED_IN = true;
        var LOGGED_IN_TYPE = "#{@user.user_type}";
  %body
    %main.container{'role' => 'main'}
      = yield
